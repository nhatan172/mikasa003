<div class="navbar navbar-default">
		<div class="navbar-brand">
			<%= link_to root_path do %>
			<%= image_tag("default/app_icon.png",:size => "30x30") %>
			<span class="app_name">JLPT Test</span>
			<% end %>
		</div>
		<ul class="right combo-btn hide-on-med-and-down">
			<% if signed_in? %>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" ><%= 'Hi, '+ current_user.name %> <span class="caret"></span></a>
					<ul class="dropdown-menu">
			            <li><%= link_to "Profile", current_user%></li>
			            <li><%= link_to "Log out", destroy_user_session_path , :method => :delete %></li>
		          </ul>
		        </li>
			<% else %>
		        <li><%= link_to "Log in", new_user_session_path %></li>
				<li><%= link_to "Sign up", new_user_registration_path %></li>
			<%end %>
		</ul>
</div>